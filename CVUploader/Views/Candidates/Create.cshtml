@model CandidateVM

@{
    ViewData["Title"] = "Create";
}

    <section class="container my-5">
        <div class="card card-primary">
            <div class="card-header bg-primary">
                <h5 class="card-title pt-1 text-white">Enter Your Data</h5>
            </div>
            <form enctype="multipart/form-data" asp-controller="Candidates" asp-action="Create" method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="FullName"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your name">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Age"></label>
                            <input asp-for="Age" class="form-control">
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="City"></label>
                            <input asp-for="City" class="form-control" placeholder="Enter your city">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Area"></label>
                            <input asp-for="Area" class="form-control" placeholder="Enter your area">
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control" placeholder="Enter your adress">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Image"></label>
                            <div class="custom-file">
                                <input asp-for="Image" class="form-control custom-file-input" accept="image/*">
                                <label class="custom-file-label">Select an image...</label>
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <label asp-for="Resume"></label>
                            <div class="custom-file">
                                <input asp-for="Resume" class="form-control custom-file-input" accept=".pdf, .docx">
                                <label class="custom-file-label">Select a file...</label>
                            </div>
                            <span asp-validation-for="Resume" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </section>

@section Scripts{ 
<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            let fileName = $(this).val().split('\\').pop();
            console.log(fileName);
            $(this).next('.custom-file-label').html(fileName);
        })
    });
</script>
}